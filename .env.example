# Headscale Domain Configuration
HEADSCALE_DOMAIN=headscale.example.com

# Cloudflare Tunnel Configuration
# You need to create a tunnel in Cloudflare Zero Trust Dashboard
# and get the tunnel token from the command:
# cloudflared tunnel run --token <YOUR_TOKEN>
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config
NAMESPACE=headscale

# Storage Configuration
STORAGE_CLASS=standard
STORAGE_SIZE=1Gi

# Headscale Configuration
HEADSCALE_BASE_DOMAIN=example.com
HEADSCALE_IP_PREFIXES="fd7a:115c:a1e0::/48,100.64.0.0/10"

# DNS Configuration
DNS_NAMESERVERS="1.1.1.1,1.0.0.1"

# Timezone
TZ=Asia/Tokyo
